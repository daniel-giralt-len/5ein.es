{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "charcreationoptions.json",
	"version": "1.0.2",
	"title": "Character Creation Options",
	"type": "object",

	"definitions": {
		"optionType": {
			"type": "string",
			"enum":  ["SG", "OF", "DG", "RF:B"]
		},

		"charoption": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"source": {
					"type": "string"
				},
				"page": {
					"type": "integer"
				},
				"optionType": {
					"oneOf": [
						{
							"$ref": "#/definitions/optionType"
						},
						{
							"type": "array",
							"items": {
								"$ref": "#/definitions/optionType"
							}
						}
					]
				},
				"otherSources": {
					"$ref": "util.json#/definitions/otherSources"
				},
				"srd": {
					"$ref": "util.json#/definitions/srd"
				},
				"hasFluff": {"type": "boolean"},
				"hasFluffImages": {"type": "boolean"}
			},
			"required": [
				"name",
				"entries",
				"source",
				"optionType"
			],
			"additionalProperties": false
		}
	},

	"properties": {
		"charoption": {
			"type": "array",
			"items": {"$ref": "#/definitions/charoption"}
		}
	},
	"additionalProperties": false
}
