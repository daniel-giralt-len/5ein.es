{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "backgrounds.json",
	"version": "1.2.1",
	"type": "object",

	"definitions": {
		"backgroundData": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"source": {
					"type": "string"
				},
				"page": {
					"type": "integer"
				},
				"skillProficiencies": {
					"$ref": "util.json#/definitions/skillProficiencies"
				},
				"toolProficiencies": {
					"$ref": "util.json#/definitions/toolProficiencies"
				},
				"languageProficiencies": {
					"$ref": "util.json#/definitions/languageProficiencies"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"additionalSources": {
					"$ref": "util.json#/definitions/additionalSources"
				},
				"srd": {
					"$ref": "util.json#/definitions/srd"
				},
				"otherSources": {
					"$ref": "util.json#/definitions/otherSources"
				},
				"startingEquipment": {
					"$ref": "util.json#/definitions/startingEquipment"
				},
				"hasFluff": {"type": "boolean"},
				"hasFluffImages": {"type": "boolean"}
			},
			"additionalProperties": false
		},

		"background": {
			"anyOf": [
				{
					"type": "object",
					"$$merge": [
						{
							"$ref": "#/definitions/backgroundData"
						},
						{
							"required": [
								"name",
								"source",
								"skillProficiencies",
								"entries"
							]
						}
					]
				},
				{
					"type": "object",
					"$$merge": [
						{
							"$ref": "#/definitions/backgroundData"
						},
						{
							"$ref": "util.json#/definitions/copyBlock"
						}
					]
				}
			]
		}
	},

	"properties": {
		"background": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/background"
			}
		},
		"_meta": {
			"$ref": "util.json#/definitions/metaBlock"
		}
	},
	"required": [
		"background"
	],
	"additionalProperties": false
}
