{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "magicvariants.json",
	"version": "1.4.3",
	"type": "object",
	"properties": {
		"variant": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"type": {
						"type": "string"
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					},
					"requires": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"ammunition": {
									"type": "boolean"
								},
								"armor": {
									"type": "boolean"
								},
								"axe": {
									"type": "boolean"
								},
								"sword": {
									"type": "boolean"
								},
								"weapon": {
									"type": "boolean"
								},
								"dmgType": {
									"type": "string"
								},
								"name": {
									"type": "string"
								},
								"type": {
									"type": "string"
								},
								"scfType": {
									"type": "string"
								},
								"net": {
									"type": "boolean"
								}
							},
							"additionalProperties": false
						}
					},
					"inherits": {
						"type": "object",
						"properties": {
							"type": {
								"description": "Generally this should be omitted, as the type of the base item will be used.",
								"type": "string"
							},
							"bonusAc": {
								"type": "string"
							},
							"bonusWeapon": {
								"type": "string"
							},
							"bonusWeaponAttack": {
								"type": "string"
							},
							"bonusSpellAttack": {
								"type": "string"
							},
							"bonusSpellDamage": {
								"type": "string"
							},
							"bonusSavingThrow": {
								"type": "string"
							},
							"bonusAbilityCheck": {
								"type": "string"
							},
							"tier": {
								"type": "string"
							},
							"rarity": {
								"type": "string",
								"enum": [
									"rare",
									"none",
									"uncommon",
									"very rare",
									"legendary",
									"artifact",
									"unknown",
									"common",
									"unknown (magic)",
									"varies"
								]
							},
							"source": {
								"type": "string"
							},
							"page": {
								"type": "integer"
							},
							"namePrefix": {
								"type": "string"
							},
							"nameSuffix": {
								"type": "string"
							},
							"nameRemove": {
								"type": "string"
							},
							"reqAttune": {
								"oneOf": [
									{
										"type": "string"
									},
									{
										"type": "boolean"
									}
								]
							},
							"curse": {
								"type": "boolean"
							},
							"vulnerable": {
								"$ref": "util.json#/definitions/damageVulnerabilityArray"
							},
							"resist": {
								"$ref": "util.json#/definitions/damageResistArray"
							},
							"immune": {
								"$ref": "util.json#/definitions/damageImmunityArray"
							},
							"conditionImmune": {
								"$ref": "util.json#/definitions/conditionImmunityArray"
							},
							"stealth": {
								"type": "boolean"
							},
							"strength": {
								"type": ["string", "null"]
							},
							"wondrous": {
								"type": "boolean"
							},
							"entries": {
								"type": "array",
								"items": {
									"$ref": "entry.json"
								}
							},
							"charges": {
								"type": ["string", "integer"]
							},
							"attachedSpells": {
								"type": "array",
								"items": {
									"type": "string"
								}
							},
							"lootTables": {
								"type": "array",
								"items": {
									"oneOf": [
										{
											"type": "string"
										},
										{
											"type": "object",
											"properties": {
												"name": {
													"type": "string"
												},
												"source": {
													"type": "string"
												}
											}
										}
									]
								}
							},
							"srd": {
								"$ref": "util.json#/definitions/srd"
							},
							"otherSources": {
								"$ref": "util.json#/definitions/otherSources"
							},
							"valueMult": {
								"type": "number"
							},
							"valueExpression": {
								"description": "Expression used to calculate each specific variant's value.",
								"type": "string"
							},
							"weightMult": {
								"type": "number"
							},
							"weightExpression": {
								"description": "Expression used to calculate each specific variant's weight.",
								"type": "string"
							},
							"barding": {
								"type": "boolean"
							},
							"reqAttuneTags": {
								"$ref": "util.json#/definitions/reqAttuneTags"
							},
							"reqAttuneAltTags": {
								"$ref": "util.json#/definitions/reqAttuneTags"
							},
							"hasRefs": {"type": "boolean"}
						},
						"required": [
							"rarity",
							"source",
							"page"
						],
						"additionalProperties": false
					},
					"excludes": {
						"type": "object",
						"properties": {
							"name": {
								"oneOf": [
									{
										"type": "string"
									},
									{
										"type": "array",
										"items": {
											"type": "string"
										}
									}
								]
							},
							"page": {
								"type": "integer"
							},
							"property": {
								"type": "string"
							},
							"net": {
								"type": "boolean"
							}
						},
						"additionalProperties": false
					},
					"noDisplay": {
						"type": "boolean"
					},
					"charges": {
						"type": ["string", "integer"]
					},
					"attachedSpells": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"ammo": {
						"type": "boolean"
					},
					"reqAttuneTags": {
						"$ref": "util.json#/definitions/reqAttuneTags"
					},
					"reqAttuneAltTags": {
						"$ref": "util.json#/definitions/reqAttuneTags"
					},
					"hasFluff": {"type": "boolean"},
					"hasFluffImages": {"type": "boolean"}
				},
				"required": [
					"name",
					"inherits"
				],
				"additionalProperties": false
			}
		},
		"linkedLootTables": {
			"type": "object",
			"properties": {
				"DMG": {
					"type": "object"
				}
			}
		}
	},
	"required": [
		"variant"
	],
	"additionalProperties": false
}
